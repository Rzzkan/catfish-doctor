<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bantuan"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/boxatas"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/logo"
            android:fontFamily="@font/rubik_bold"
            android:text="Sistem Pakar Ikan Lele"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/judul2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/logo"
            android:fontFamily="@font/rubik_regular"
            android:text="Cara Perawatan Ikan Lele"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/polije"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/polije" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pemisah"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/boxatas"
        android:background="@color/gray" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pemisah"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rubik_bold"
        android:paddingLeft="20dp"
        android:text="Menu Bantuan Tanya Pakar"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_judul"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:id="@+id/mc_cardsatu"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logoikan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penggunaan menu kematian tingkat tinggi"
                android:layout_gravity="center"
                android:paddingLeft="20dp"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mc_cardsatu"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:id="@+id/mc_carddua"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logoikan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penggunaan menu kematian tingkat Rendah"
                android:layout_gravity="center"
                android:paddingLeft="20dp"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>